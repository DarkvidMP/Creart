<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/botones"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:ignore="InvalidId,MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

        </LinearLayout>

        <eu.atspace.creart.login.PaintView
            android:id="@+id/paintView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="65dp" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/botones2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="DuplicateIds,MissingConstraints"
            tools:layout_editor_absoluteX="494dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/colornegro"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="#000000"
                android:onClick="onClick"
                app:srcCompat="@android:color/background_dark"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/colorrojo"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="#E74C3C"
                android:backgroundTintMode="multiply"
                android:onClick="onClick"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/colorazul"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="#5DADE2"
                android:onClick="onClick"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/colorverde"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="#2ECC71"
                android:onClick="onClick"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/coloramarillo"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="#F1C40F"
                android:onClick="onClick"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/mascolores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="MÃ¡s colores" />
        </LinearLayout>

    </LinearLayout>

